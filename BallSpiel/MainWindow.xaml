<Window x:Class="BallSpiel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BallSpiel"
        mc:Ignorable="d"
        Title="LenMoments Ballspiel" Height="450" Width="800">
    <Grid>
        <Button Content="Start/Stop" x:Name="StartStopButton" HorizontalAlignment="Left" Margin="60,60,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.007,0.537" Click="StartStopButton_Click"/>
        <Label Content="0 Clicks" x:Name="SpielstandLabel" HorizontalAlignment="Left" Margin="60,97,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.945,-0.439"/>
        <Canvas x:Name="Spielplatz" Margin="161,0,0,0" Background="Bisque">
            <Ellipse x:Name="Ball" Height="20" Width="20" Fill="Cyan" Canvas.Left="100" Canvas.Top="100"></Ellipse>
        </Canvas>
    </Grid>
</Window>
