<Window
    x:Class="BallSpiel.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BallSpiel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LenMoments Ballspiel"
    Width="800"
    Height="450"
    KeyUp="Ball_KeyUp"
    mc:Ignorable="d">
    <Grid>
        <Button
            x:Name="StartStopButton"
            Margin="60,60,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="StartStopButton_Click"
            Content="Start/Stop"
            RenderTransformOrigin="-0.007,0.537" />
        <Label
            x:Name="SpielstandLabel"
            Margin="60,97,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="0 Clicks"
            RenderTransformOrigin="0.945,-0.439" />
        <Canvas
            x:Name="Spielplatz"
            Margin="161,0,0,0"
            Background="Bisque">
            <Ellipse
                x:Name="Ball"
                Canvas.Left="100"
                Canvas.Top="100"
                Width="20"
                Height="20"
                Fill="Cyan"
                MouseUp="Ball_MouseUp" />
        </Canvas>
    </Grid>
</Window>
